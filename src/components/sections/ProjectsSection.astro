---
import ProjectCard from '../ui/ProjectCard.astro';
---

<section class="py-20 px-6 bg-black">
  <div class="max-w-6xl mx-auto">
    <h3 class="text-5xl font-black text-white mb-12 text-center">PROJECTS THAT DON'T SUCK</h3>    <div class="grid md:grid-cols-2 gap-8">
      <ProjectCard
        title="KUBERNETES AUTOSCALER"
        description="CUSTOM HPA THAT SCALES BASED ON BUSINESS METRICS, NOT JUST CPU"
        technologies={["GO", "K8S", "PROMETHEUS"]}
        bgColor="bg-red-500"
        rotation="-rotate-1"
      />

      <ProjectCard
        title="TERRAFORM MODULES"
        description="REUSABLE INFRASTRUCTURE MODULES FOR AWS, GCP & AZURE"
        technologies={["TERRAFORM", "AWS", "GCP"]}
        bgColor="bg-green-500"
        rotation="rotate-1"
      />
    </div>
  </div>
</section>
