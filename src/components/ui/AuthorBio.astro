---
import Button from './Button.astro';
import { Github, ExternalLink } from 'lucide-react';
---

<div class="mt-12 bg-purple-400 border-8 border-black p-8 shadow-[12px_12px_0px_0px_#000000] transform -rotate-1">
  <div class="flex items-start gap-6">
    <div class="w-20 h-20 bg-black rounded-full flex items-center justify-center text-white font-black text-2xl border-4 border-white shadow-[4px_4px_0px_0px_#000000]">
      F
    </div>
    <div>
      <h4 class="text-2xl font-black mb-3">FRANCISCO NÚÑEZ SIERRA</h4>
      <p class="text-lg font-bold mb-6 leading-relaxed">
        DEVOPS ENGINEER WITH 4+ YEARS OF EXPERIENCE BUILDING AND SCALING CLOUD INFRASTRUCTURE.
        PASSIONATE ABOUT AUTOMATION, MONITORING, AND SHARING KNOWLEDGE WITH THE COMMUNITY.
      </p>
      <div class="flex gap-4">
        <Button className="bg-black text-white hover:bg-gray-800 font-black border-4 border-black shadow-[4px_4px_0px_0px_#000000]">
          <Github className="mr-2 w-4 h-4" />
          GITHUB
        </Button>
        <a href="https://www.linkedin.com/in/franusi" target="_blank" rel="noopener noreferrer">
          <Button className="bg-blue-500 text-white hover:bg-blue-600 font-black border-4 border-black shadow-[4px_4px_0px_0px_#000000]">
            <ExternalLink className="mr-2 w-4 h-4" />
            LINKEDIN
          </Button>
        </a>
      </div>
    </div>
  </div>
</div>
