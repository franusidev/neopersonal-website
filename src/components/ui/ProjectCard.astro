---
import Button from './Button.astro';
import Card from './Card.astro';
import CardContent from './CardContent.astro';
import CardHeader from './CardHeader.astro';
import CardTitle from './CardTitle.astro';
import { ExternalLink } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  technologies: string[];
  bgColor: string;
  rotation: string;
  projectUrl?: string;
}

const { title, description, technologies, bgColor, rotation, projectUrl } = Astro.props;
---

<Card className={`border-8 border-white ${bgColor} text-white transform ${rotation} shadow-[8px_8px_0px_0px_#ffffff]`}>
  <CardHeader>
    <CardTitle className="text-2xl font-black">{title}</CardTitle>
  </CardHeader>
  <CardContent>
    <p class="font-bold mb-4">{description}</p>
    <div class="flex gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="bg-white text-black px-2 py-1 text-sm font-bold">{tech}</span>
      ))}
    </div>
    {projectUrl && (
      <a href={projectUrl} target="_blank" rel="noopener noreferrer">
      <Button
        variant="outline"
        className="bg-white text-black border-4 border-white font-black hover:bg-gray-100"
      >
        <ExternalLink className="mr-2" />
        VIEW PROJECT
      </Button>
      </a>
    )}
  </CardContent>
</Card>
