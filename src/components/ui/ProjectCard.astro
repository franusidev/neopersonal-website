---
import Button from './Button.astro';
import Card from './Card.astro';
import CardContent from './CardContent.astro';
import CardHeader from './CardHeader.astro';
import CardTitle from './CardTitle.astro';
import { ExternalLink } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  technologies: string[];
  bgColor: string;
  rotation: string;
  projectUrl?: string;
}

const { title, description, technologies, bgColor, rotation, projectUrl } = Astro.props;
---

<Card className={`border-4 sm:border-6 md:border-8 border-white ${bgColor} text-white transform ${rotation} shadow-[6px_6px_0px_0px_#ffffff] md:shadow-[8px_8px_0px_0px_#ffffff]`}>
  <CardHeader>
    <CardTitle className="text-lg sm:text-xl md:text-2xl font-black">{title}</CardTitle>
  </CardHeader>
  <CardContent>
    <p class="font-bold mb-3 sm:mb-4 text-sm sm:text-base">{description}</p>
    <div class="flex flex-wrap gap-1 sm:gap-2 mb-3 sm:mb-4">
      {technologies.map((tech) => (
        <span class="bg-white text-black px-1.5 sm:px-2 py-0.5 sm:py-1 text-xs sm:text-sm font-bold">{tech}</span>
      ))}
    </div>
    {projectUrl && (
      <a href={projectUrl} target="_blank" rel="noopener noreferrer">
      <Button
        variant="outline"
        className="bg-white text-black border-2 sm:border-4 border-white font-black hover:bg-gray-100 text-sm sm:text-base px-3 sm:px-4 py-2 sm:py-3"
      >
        <ExternalLink className="mr-1 sm:mr-2 w-3 h-3 sm:w-4 sm:h-4" />
        VIEW PROJECT
      </Button>
      </a>
    )}
  </CardContent>
</Card>
