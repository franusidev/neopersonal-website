---
import Card from './Card.astro';
import CardContent from './CardContent.astro';
import CardHeader from './CardHeader.astro';
import CardTitle from './CardTitle.astro';
import Button from './Button.astro';
import CategoryBadge from './CategoryBadge.astro';
import { Calendar, Clock, ArrowRight } from 'lucide-react';
import { formatShortBlogDate } from '../../lib/blog';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  index?: number;
}

const { post, index = 0 } = Astro.props;
---

<Card
  className={`border-8 border-black bg-white hover:shadow-[16px_16px_0px_0px_#000000] transition-all duration-300 transform hover:rotate-0 shadow-[8px_8px_0px_0px_#000000]`}
>
  <CardHeader className="pb-4">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4 gap-2">
      <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-sm font-bold">
        <span class="flex items-center gap-1">
          <Calendar className="w-4 h-4" />
          {formatShortBlogDate(new Date(post.data.date))}
        </span>
        <span class="flex items-center gap-1">
          <Clock className="w-4 h-4" />
          {post.data.readTime.toUpperCase()}
        </span>
      </div>
      <CategoryBadge category={post.data.category} />
    </div>

    <CardTitle className="text-xl sm:text-2xl md:text-3xl font-black mb-4 leading-tight hover:text-red-500 transition-colors">
      <a href={`/blog/${post.id}`}>{post.data.title.toUpperCase()}</a>
    </CardTitle>

    <p class="text-base sm:text-lg font-bold mb-6 leading-relaxed text-gray-700">{post.data.excerpt}</p>

    <div class="flex flex-wrap gap-2 mb-4">
      {post.data.tags.map((tag: string) => (
        <span class="bg-black text-white px-2 sm:px-3 py-1 font-bold text-xs sm:text-sm border-2 border-black">
          {tag.toUpperCase()}
        </span>
      ))}
    </div>
  </CardHeader>

  <CardContent className="pt-0">
    <a href={`/blog/${post.id}`}>
      <Button className="bg-red-500 text-white hover:bg-red-600 font-black text-base sm:text-lg border-4 border-black shadow-[4px_4px_0px_0px_#000000] hover:shadow-[6px_6px_0px_0px_#000000] transition-all">
        READ MORE
        <ArrowRight className="ml-2 w-4 h-4 sm:w-5 sm:h-5" />
      </Button>
    </a>
  </CardContent>
</Card>
