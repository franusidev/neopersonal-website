---
export interface ResumeData {
  name: string;
  title: string;
  location: string;
  email: string;
  phone: string;
  linkedin: string;
  sections: {
    details: { icon: string; title: string };
    skills: { icon: string; title: string; items: Array<{ name: string; level: number }> };
    profile: { icon: string; title: string; content: string };
    employment: { icon: string; title: string; jobs: Array<{ title: string; company: string; period: string; responsibilities: string[] }> };
    education: { icon: string; title: string; degree: string; institution: string; period: string; highlights: string[] };
    references: { icon: string; title: string; content: string; contact: string };
  };
}

export interface ResumeLayoutProps {
  data: ResumeData;
  lang: 'en' | 'es';
  title: string;
  isPdf?: boolean;
}

const { data, lang, title, isPdf = false } = Astro.props as ResumeLayoutProps;

const locationText = lang === 'es' ? 'Madrid, España' : 'Madrid, Spain';
const jobConnector = lang === 'es' ? 'en' : 'at';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    /* Reset and base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Helvetica', Arial, sans-serif;
      line-height: 1.4;
      color: #000;
      background: white;
      font-size: 12px;
    }
    
    .container {
      max-width: 210mm;
      margin: 0 auto;
      padding: 20px;
      background: white;
    }
    
    .header {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 8px;
      margin: 0 auto 15px;
      border: 2px solid #ccc;
      object-fit: cover;
    }
    
    h1 {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 8px;
      letter-spacing: 1px;
    }
    
    .subtitle {
      font-size: 14px;
      color: #666;
      margin-bottom: 5px;
    }
    
    .grid {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 30px;
      margin-top: 20px;
    }
    
    .section {
      margin-bottom: 25px;
    }
    
    .section-title {
      font-size: 16px;
      font-weight: bold;
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      border-bottom: 1px solid #ddd;
      padding-bottom: 5px;
    }
    
    .section-icon {
      margin-right: 8px;
      font-size: 16px;
    }
    
    .details p {
      margin-bottom: 4px;
      font-size: 11px;
      color: #333;
    }
    
    .skill-item {
      margin-bottom: 10px;
    }
    
    .skill-name {
      font-weight: bold;
      font-size: 11px;
      margin-bottom: 3px;
    }
    
    .skill-bar {
      width: 100%;
      height: 6px;
      background: #e0e0e0;
      border-radius: 3px;
      overflow: hidden;
    }
    
    .skill-progress {
      height: 100%;
      background: #000;
      border-radius: 3px;
    }
    
    .profile-text {
      font-size: 11px;
      line-height: 1.6;
      text-align: justify;
      color: #333;
    }
    
    .job {
      border-left: 3px solid #ddd;
      padding-left: 15px;
      margin-bottom: 20px;
    }
    
    .job-title {
      font-weight: bold;
      font-size: 13px;
      margin-bottom: 3px;
    }
    
    .job-period {
      font-size: 10px;
      color: #666;
      margin-bottom: 8px;
    }
    
    .job-responsibilities {
      list-style: none;
    }
    
    .job-responsibilities li {
      font-size: 10px;
      margin-bottom: 3px;
      padding-left: 12px;
      position: relative;
      color: #333;
    }
    
    .job-responsibilities li:before {
      content: "•";
      position: absolute;
      left: 0;
      color: #000;
    }
    
    .education-item {
      border-left: 3px solid #ddd;
      padding-left: 15px;
    }
    
    .education-title {
      font-weight: bold;
      font-size: 13px;
      margin-bottom: 3px;
    }
    
    .education-institution {
      font-size: 11px;
      color: #666;
      margin-bottom: 3px;
    }
    
    .education-period {
      font-size: 10px;
      color: #666;
      margin-bottom: 8px;
    }
    
    .education-highlights {
      list-style: none;
    }
    
    .education-highlights li {
      font-size: 10px;
      margin-bottom: 3px;
      padding-left: 12px;
      position: relative;
      color: #333;
    }
    
    .education-highlights li:before {
      content: "•";
      position: absolute;
      left: 0;
      color: #000;
    }
    
    .references {
      border-left: 3px solid #ddd;
      padding-left: 15px;
    }
    
    .references-content {
      font-weight: bold;
      font-size: 13px;
      margin-bottom: 3px;
    }
    
    .references-contact {
      font-size: 10px;
      color: #666;
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
      .container {
        max-width: 100%;
        padding: 15px;
      }

      .grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .profile-img {
        width: 100px;
        height: 100px;
      }

      h1 {
        font-size: 20px;
      }

      .subtitle {
        font-size: 12px;
      }

      .section-title {
        font-size: 14px;
      }

      .header {
        margin-bottom: 30px;
      }

      .section {
        margin-bottom: 20px;
      }
    }

    @media screen and (max-width: 480px) {
      .container {
        padding: 10px;
      }

      .grid {
        gap: 15px;
      }

      .profile-img {
        width: 80px;
        height: 80px;
      }

      h1 {
        font-size: 18px;
      }

      .subtitle {
        font-size: 11px;
      }

      .section-title {
        font-size: 13px;
        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
      }

      .section-icon {
        margin-right: 0;
        margin-bottom: 3px;
      }

      .job {
        padding-left: 10px;
        margin-bottom: 15px;
      }

      .education-item {
        padding-left: 10px;
      }

      .references {
        padding-left: 10px;
      }

      .header {
        margin-bottom: 25px;
      }

      .section {
        margin-bottom: 18px;
      }
    }

    @media print {
      .container {
        max-width: none;
        padding: 10mm;
      }

      .grid {
        grid-template-columns: 1fr 2fr;
      }

      body {
        font-size: 10px;
      }

      .profile-img {
        width: 60px;
        height: 60px;
      }

      h1 {
        font-size: 18px;
      }

      .subtitle {
        font-size: 11px;
      }

      .section-title {
        font-size: 12px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header Section -->
    <div class="header">
      <img src="/profilepicture.png" alt="Profile Picture" class="profile-img">
      <h1>{data.name}</h1>
      <div class="subtitle">{data.title} • {data.location} • {data.email}</div>
    </div>

    <div class="grid">
      <!-- Left Column -->
      <div class="left-column">
        <!-- Details Section -->
        <div class="section">
          <h2 class="section-title">
            <span class="section-icon">{data.sections.details.icon}</span>
            {data.sections.details.title}
          </h2>
          <div class="details">
            <p>{locationText}</p>
            <p>{data.email}</p>
            <p>{data.phone}</p>
            <p>{data.linkedin}</p>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="section">
          <h2 class="section-title">
            <span class="section-icon">{data.sections.skills.icon}</span>
            {data.sections.skills.title}
          </h2>
          <div class="skills">
            {data.sections.skills.items.map((skill) => (
              <div class="skill-item">
                <div class="skill-name">{skill.name}</div>
                <div class="skill-bar">
                  <div class="skill-progress" style={`width: ${skill.level}%`}></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="right-column">
        <!-- Profile Section -->
        <div class="section">
          <h2 class="section-title">
            <span class="section-icon">{data.sections.profile.icon}</span>
            {data.sections.profile.title}
          </h2>
          <p class="profile-text">{data.sections.profile.content}</p>
        </div>

        <!-- Employment History -->
        <div class="section">
          <h2 class="section-title">
            <span class="section-icon">{data.sections.employment.icon}</span>
            {data.sections.employment.title}
          </h2>
          <div class="jobs">
            {data.sections.employment.jobs.map((job) => (
              <div class="job">
                <h3 class="job-title">{job.title} {jobConnector} {job.company}</h3>
                <p class="job-period">{job.period}</p>
                <ul class="job-responsibilities">
                  {job.responsibilities.map((resp) => (
                    <li>{resp}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- Education -->
        <div class="section">
          <h2 class="section-title">
            <span class="section-icon">{data.sections.education.icon}</span>
            {data.sections.education.title}
          </h2>
          <div class="education-item">
            <h3 class="education-title">{data.sections.education.degree}</h3>
            <p class="education-institution">{data.sections.education.institution}</p>
            <p class="education-period">{data.sections.education.period}</p>
            <ul class="education-highlights">
              {data.sections.education.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</body>
