---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Button from '../../components/ui/Button.astro';
import { Calendar, Clock, ArrowLeft, Github, ExternalLink, Share2, BookOpen } from 'lucide-react';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props as Props;
const { Content } = await entry.render();

const categoryColors = {
  Infrastructure: "bg-red-500",
  Security: "bg-green-500",
  Observability: "bg-purple-500", 
  Automation: "bg-orange-500",
};
---

<Layout title={`${entry.data.title} - Francisco Núñez Sierra`}>
  <div class="min-h-screen bg-green-400 font-mono">
    <Navbar currentPage="blog-post" />

    <!-- Article -->
    <article class="py-12 px-6">
      <div class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <div class="bg-white border-8 border-black p-8 mb-8 shadow-[12px_12px_0px_0px_#000000] transform -rotate-1">
          <div class="flex items-center gap-4 text-sm font-bold mb-4">
            <span
              class={`${categoryColors[entry.data.category]} text-white px-4 py-2 font-black border-3 border-black shadow-[3px_3px_0px_0px_#000000]`}
            >
              {entry.data.category.toUpperCase()}
            </span>
            <span class="flex items-center gap-1">
              <Calendar className="w-4 h-4" />
              {entry.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              }).toUpperCase()}
            </span>
            <span class="flex items-center gap-1">
              <Clock className="w-4 h-4" />
              {entry.data.readTime.toUpperCase()}
            </span>
          </div>

          <h1 class="text-4xl md:text-5xl font-black mb-6 leading-tight text-gray-900">
            {entry.data.title.toUpperCase()}
          </h1>

          <div class="flex flex-wrap gap-2 mb-6">
            {entry.data.tags.map((tag) => (
              <span class="bg-black text-white px-3 py-2 font-bold text-sm border-2 border-black">
                {tag.toUpperCase()}
              </span>
            ))}
          </div>

          <!-- Share buttons -->
          <div class="flex items-center gap-4 pt-4 border-t-4 border-black">
            <span class="text-lg font-black">SHARE:</span>
            <Button
              size="sm"
              className="bg-blue-500 text-white border-3 border-black font-black shadow-[3px_3px_0px_0px_#000000] hover:bg-blue-600"
            >
              <Share2 className="w-4 h-4 mr-1" />
              TWITTER
            </Button>
            <Button
              size="sm"
              className="bg-purple-500 text-white border-3 border-black font-black shadow-[3px_3px_0px_0px_#000000] hover:bg-purple-600"
            >
              <ExternalLink className="w-4 h-4 mr-1" />
              LINKEDIN
            </Button>
          </div>
        </div>

        <!-- Article Content -->
        <div class="bg-white border-8 border-black p-8 shadow-[12px_12px_0px_0px_#000000] transform rotate-1">
          <div class="prose prose-lg max-w-none">
            <Content />
          </div>
        </div>

        <!-- Author Bio -->
        <div class="mt-12 bg-purple-400 border-8 border-black p-8 shadow-[12px_12px_0px_0px_#000000] transform -rotate-1">
          <div class="flex items-start gap-6">
            <div class="w-20 h-20 bg-black rounded-full flex items-center justify-center text-white font-black text-2xl border-4 border-white shadow-[4px_4px_0px_0px_#000000]">
              F
            </div>
            <div>
              <h4 class="text-2xl font-black mb-3">FRANCISCO NÚÑEZ SIERRA</h4>
              <p class="text-lg font-bold mb-6 leading-relaxed">
                DEVOPS ENGINEER WITH 4+ YEARS OF EXPERIENCE BUILDING AND SCALING CLOUD INFRASTRUCTURE.
                PASSIONATE ABOUT AUTOMATION, MONITORING, AND SHARING KNOWLEDGE WITH THE COMMUNITY.
              </p>
              <div class="flex gap-4">
                <Button className="bg-black text-white hover:bg-gray-800 font-black border-4 border-black shadow-[4px_4px_0px_0px_#000000]">
                  <Github className="mr-2 w-4 h-4" />
                  GITHUB
                </Button>
                <Button className="bg-blue-500 text-white hover:bg-blue-600 font-black border-4 border-black shadow-[4px_4px_0px_0px_#000000]">
                  <ExternalLink className="mr-2 w-4 h-4" />
                  LINKEDIN
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

    <!-- Footer -->
    <footer class="bg-black text-white p-6 mt-12 border-t-8 border-white">
      <div class="max-w-6xl mx-auto text-center">
        <p class="font-black text-xl">© 2024 FRANUSI.DEV - SHARING DEVOPS KNOWLEDGE & BEST PRACTICES</p>
      </div>
    </footer>
  </div>
</Layout>
